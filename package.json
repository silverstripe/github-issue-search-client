{
  "name": "github-issue-search-client",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "get-repos": "node util/get-supported-module-env.js",
    "now-build": "node util/get-supported-module-env.js && npm run build"
  },
  "dependencies": {
    "@apollo/client": "^3.4.10",
    "@octokit/rest": "^21.1.0",
    "@vue/apollo-option": "^4.0.0-beta.9",
    "@vue/compat": "^3.2.6",
    "@vueuse/core": "^10.4.1",
    "core-js": "^3.6.5",
    "date-fns": "^2.23.0",
    "graphql-tag": "^2.12.6",
    "lodash.debounce": "^4.0.8",
    "url-search-params-polyfill": "^8.2.5",
    "vue": "^3.2",
    "vue-apollo": "^3.1.1",
    "vue-loader": "^17.2.2",
    "vue-loaders": "^4.1.4",
    "vue-toggle-component": "^1.0.16"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.22.15",
    "@graphql-eslint/eslint-plugin": "3.20.1",
    "@octokit/graphql-schema": "^14.33.0",
    "@octokit/types": "^12.0.0",
    "@types/lodash": "^4.14.172",
    "@types/lodash.debounce": "^4.0.6",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-plugin-typescript": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "@vue/compiler-sfc": "^3.1.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.50.0",
    "eslint-plugin-vue": "^9.17.0",
    "node-fetch": "^3.3.2",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript"
    ],
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "rules": {
      "vue/multi-word-component-names": "off"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
